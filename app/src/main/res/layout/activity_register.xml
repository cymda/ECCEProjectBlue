<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cyrusdeapolonia.ecceprojectblue.RegisterActivity">

    <TextView
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txv_coursetitle_professors"
        android:layout_alignParentEnd="true"
        android:textSize="30sp"
        android:textColor="@android:color/holo_orange_dark"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:fontFamily="serif" />

    <TextView
        android:text="Name: "
        android:layout_below="@+id/txv_coursetitle_professors"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:id="@+id/txv_professorname"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_toStartOf="@+id/edt_name"
        android:layout_height="40dp"
        android:layout_width="wrap_content" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edt_name"
        android:layout_alignTop="@+id/txv_professorname"
        android:layout_alignParentEnd="true"
        android:hint="Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edt_idno"
        android:hint="ID Number"
        android:layout_below="@+id/edt_name"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="ID Number:"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/txv_comment"
        android:layout_below="@+id/txv_professorname"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_toStartOf="@+id/edt_name" />

    <TextView
        android:text="Course:"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/txv_coursereview"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/txv_comment"
        android:layout_alignEnd="@+id/txv_comment"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/edt_idno"
        android:layout_alignParentEnd="true"
        android:id="@+id/edt_course"
        android:hint="Course" />

    <TextView
        android:text="Username:"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/textView6"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/txv_coursereview"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/edt_course" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edt_username"
        android:hint="Username"
        android:layout_below="@+id/txv_coursereview"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edt_password"
        android:hint="Password"
        android:layout_below="@+id/edt_username"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/edt_password" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:id="@+id/btn_register" />

    <TextView
        android:text="Email Address:"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:id="@+id/textView10"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_toStartOf="@+id/edt_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toEndOf="@+id/textView4"
        android:id="@+id/edt_email"
        android:hint="Email Address" />

</RelativeLayout>